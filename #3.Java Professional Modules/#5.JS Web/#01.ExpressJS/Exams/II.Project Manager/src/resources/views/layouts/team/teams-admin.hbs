<h1>Teams</h1>
<h3>Manage Users</h3>
<div class="form">
    <form method="post" action="/team/assign">
        <label>User</label>
        <select name="user">
            {{#each users}}
                <option value="{{_id}}">{{username}}</option>
            {{/each}}
        </select>
        <label>Team</label>
        <select name="team">
            {{#each teams}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Distribute">
    </form>
</div>