<table style="margin: 0 auto; margin-top:5%; margin-bottom: 5%; width: 95%;" class="table table-hover">
    <thead>
    <tr class="bg-warning">
        <th>
            #
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            Details
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    {{#each offers}}
        <tr>
            <td class="">{{@index}}</td>
            <td class="">{{product}}</td>
            <td class="description">{{description}}</td>
            <td class="">{{price}}</td>
            <td>
                <a href='#/offer/view/{{_id}}' class="btn-primary btn">Order details</a>
            </td>
            <td>
                {{#if canDelete}}
                    <a href='#/offer/delete/{{_id}}' class="btn-danger btn">Delete</a>
                {{/if}}

                {{#if canEdit}}
                    <a href='#/offer/edit/{{_id}}' class="btn-info btn">Edit</a>
                {{/if}}

                {{#if canBuy}}
                    <a href="#/offer/buy/{{_id}}" class="btn-warning btn">Buy</a>
                {{/if}}
            </td>
        </tr>
    {{else}}
        <tr>
            <td style="text-align: center;" colspan="6">
                <h2 style="font-style: italic;">There are no offers, we are very sorry...</h2>
            </td>
        </tr>
    {{/each}}
    </tbody>

</table>